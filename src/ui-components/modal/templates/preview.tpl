<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bgm-lightgray">
            <h4 class="modal-title"><%-title%></h4>
        </div>
        <div class="modal-body p-0 text-center">
            <img src="<%-preview%>" style="max-width:100%;max-height:500px;">
        </div>
        <div class="modal-footer bgm-lightgray">
            <button type="button" class="btn btn-link waves-effect event-modal-close">Close</button>
        </div>
    </div>
</div>